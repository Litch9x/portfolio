{
  "compilerOptions": {
    "target": "ES2020",
    // ⚠️ nên để ES2020 hoặc cao hơn
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"] // ✅ đúng cấu trúc alias
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    // ❌ KHÔNG include ".next/types" vì sẽ bị conflict với type checker
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
